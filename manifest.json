{
  "manifest_version": 3,
  "name": "Google Calendar Availability Extractor",
  "version": "1.0",
  "description": "Extracts availability from Google Calendar and copies it to the clipboard.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "host_permissions": ["https://calendar.google.com/*"],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["dist/content_script.js"],
      "run_at": "document_idle"
    }
  ]
}

  